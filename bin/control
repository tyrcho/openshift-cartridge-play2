#!/bin/bash -e

function start {
    cd $OPENSHIFT_REPO_DIR
    nohup dart server.dart >> $OPENSHIFT_DART_LOG_DIR/dart.log 2>&1  &
}

function stop {
    killall dart || true
}

function restart {
    stop
    start
}

function build {
    # Workaround for failure in npm install when a package in package.json
    # points to a git commit.
    # This issue occurs because we are running in the context of a
    # git post receive-hook
    unset GIT_DIR
    unset GIT_WORK_TREE

    cd $OPENSHIFT_REPO_DIR
    pub install
}

function tidy {
    shopt -s dotglob
    rm -rf $OPENSHIFT_DART_LOG_DIR/*
    rm -rf $OPENSHIFT_TMP_DIR/*
}

function catchall {
    echo ""
}

case "$1" in
  start)       start ;;
  stop)        stop ;;
  restart)     restart ;;
  status)      status ;;
  reload)      catchall ;;
  tidy)        tidy ;;
  pre-build)   catchall ;;
  build)       build ;;
  deploy)      catchall ;;
  post-deploy) catchall ;;
  *)           exit 0
esac

exit 0
